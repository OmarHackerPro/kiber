# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database (SQLite for dev; use DATABASE_URL for PostgreSQL in production)
DATABASE_URL="file:./dev.db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Optional: background job queue (e.g. Redis URL for Bull/BullMQ)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
